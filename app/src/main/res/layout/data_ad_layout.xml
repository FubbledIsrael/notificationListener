<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/dataAdContainer"
    android:layout_marginTop="@dimen/common_padding_min"
    android:layout_marginBottom="@dimen/common_padding_min_xs"
    android:layout_marginHorizontal="@dimen/common_padding_min"
    app:cardElevation="@dimen/common_padding_min">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvApplication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/primaryDarkColor"
            android:textAppearance="?attr/textAppearanceBody1"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="@dimen/common_padding_min"
            android:textStyle="bold"
            android:text="@string/whatsapp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ad_data"
            android:textAppearance="?attr/textAppearanceBody1"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="@dimen/common_padding_min"
            android:gravity="center"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvApplication"/>

        <ImageView
            android:id="@+id/icExpired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_warning"
            android:padding="@dimen/common_padding_min"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvApplication"
            android:contentDescription="@string/app_name"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:textAppearance="?attr/textAppearanceBody2"
            android:padding="@dimen/common_padding_min_xs"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/common_padding_min_xs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icExpired"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="123"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="?attr/textAppearanceBody2"
            android:padding="@dimen/common_padding_min_xs"
            app:layout_constraintStart_toEndOf="@id/textId"
            app:layout_constraintTop_toBottomOf="@+id/icExpired"
            android:textStyle="bold"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="6644794560"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="?attr/textAppearanceBody2"
            android:padding="@dimen/common_padding_min_xs"
            android:layout_marginEnd="@dimen/common_padding_min_xs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icExpired"
            android:textStyle="bold"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/city"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="?attr/textAppearanceBody2"
            android:padding="@dimen/common_padding_min_xs"
            android:layout_marginStart="@dimen/common_padding_min_xs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textId"
            android:textStyle="bold"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="A"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="?attr/textAppearanceBody2"
            android:padding="@dimen/common_padding_min_xs"
            app:layout_constraintStart_toEndOf="@+id/tvCity"
            app:layout_constraintTop_toBottomOf="@+id/textId"
            android:textStyle="bold"/>


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textExpires"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/common_padding_min_xs"
            android:layout_marginEnd="@dimen/common_padding_min_xs"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textStyle="bold"
            android:textColor="@color/primaryDarkColor"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvCategory"
            android:text="@string/expires" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvExpires"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/common_padding_min_xs"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textExpires"
            app:layout_constraintBottom_toBottomOf="@+id/textExpires"
            tools:text="20 mayo 2022" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textLastUpdate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/common_padding_min_xs"
            android:textAppearance="?attr/textAppearanceBody2"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/common_padding_min_xs"
            android:textColor="@color/primaryDarkColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textExpires"
            android:text="@string/update" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLastUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/common_padding_min_xs"
            android:textAppearance="?attr/textAppearanceCaption"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textLastUpdate"
            app:layout_constraintTop_toBottomOf="@+id/tvExpires"
            tools:text="20 mayo 2022" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/textMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/common_padding_min_xs"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceHeadlineLarge"
            android:textSize="11sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/common_padding_min_xs"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@color/secondaryColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvLastUpdate"
            tools:text="Mensaje" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>