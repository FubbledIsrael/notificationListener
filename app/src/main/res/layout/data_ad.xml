<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/ad"
            android:textSize="20sp"
            style="@style/Theme.SamsMx"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_pay_ad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="20sp"
            android:layout_marginStart="6dp"
            style="@style/Theme.SamsMx"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ic_pay_ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:src="@drawable/ic_circle_warning"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/ad_data"
            android:textSize="20sp"
            android:padding="4dp"
            style="@style/Theme.SamsMx"
            android:gravity="center"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/id"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_id_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_category_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/city"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_city_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phoneMile"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_phone_ad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/number_register"
            android:textSize="20sp"
            android:padding="4dp"
            style="@style/Theme.SamsMx"
            android:gravity="center"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_number"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_last_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/whatsapp"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_whatsapp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                style="@style/Theme.SamsMx"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>